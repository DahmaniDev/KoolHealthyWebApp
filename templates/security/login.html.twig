<html>
<head>
<title>Kool Healthy PFE</title>
    <link rel="stylesheet" type="text/css" href="css/signin.css">
</head>

{% block body %}
<div class="loginbox">
<img src="images/avatar.png" class="avatar">
<form method="post">
    

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus placeholder="Enter E-mail">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Enter Password">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
        <!-- <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div> -->
    <br>
    <input type="submit" name="" value="Login">
</form>
<a href="home">Login later?</a>
</div>
{% endblock %}
